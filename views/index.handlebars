<h1>Eat the Burger!</h1>


<img src="/assets/images/burger.jpg" alt="burger" class="center">

<h2>Ready to Eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}

</ul>


<h2>Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="new">Burger Name:</label>
    <input type="text" id="new" name="name">
  </div>

  <div class="form-group">
    
    <input type="radio" name="devoured" value="0"> Ready!
  </div>

  <button type="submit" >Add Burger</button>
</form>

